#include<bits/stdc++.h>
using namespace std;
class base
{
public:
    void print()
    {
        cout<<"print base class "<<endl;
    }
    void show()
    {
        cout<<"show the base class"<<endl;
    }
};
class dervied:public base
{
public:
    void print()
    {
        cout<<"print the dervied class"<<endl;
    }
    void show()
    {
        cout<<"show the dervied class "<<endl;
    }
};
int main()
{
    dervied *ptr;
    dervied d;
    ptr=&d;
    ptr->print();
    ptr->show();

    return 0;
}
